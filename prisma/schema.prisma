generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  firstName     String
  lastName      String
  password      String
  email         String?  @unique
  createdAt     DateTime @default(now())
  refreshTokens RefreshToken[]
  posts Post[]
  comments Comment[]
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hash       String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  agent      String
  ip         String
  @@index([hash])
}

model Post {
  id           Int       @id @default(autoincrement())
  authorId     Int
  author       User      @relation(fields: [authorId], references: [id])
  content      String
  editedAt     DateTime?
  createdAt    DateTime  @default(now())
  comments     Comment[]
  @@index([id, authorId])
}

model Comment {
  id            Int        @id @default(autoincrement())

  authorId      Int
  author        User       @relation(fields: [authorId], references: [id])

  postId        Int
  post          Post       @relation(fields: [postId], references: [id])

  parentId      Int?
  parent        Comment?   @relation("CommentParent", fields: [parentId], references: [id])
  parentReplies Comment[]  @relation("CommentParent")

  repliedToId   Int?       
  repliedTo     Comment?    @relation("CommentReplied", fields: [repliedToId], references: [id])
  replyFrom     Comment[]   @relation("CommentReplied")

  content      String
  editedAt     DateTime?
  createdAt    DateTime     @default(now())

  @@index([id, postId, authorId, parentId])
}

