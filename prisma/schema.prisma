generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  firstName     String
  lastName      String
  password      String
  email         String?        @unique
  createdAt     DateTime       @default(now())
  avatarUrl     String         @default("/avatars/no-avatar.jpg")
  coverUrl      String         @default("/covers/no-cover.png")
  refreshTokens RefreshToken[]
  posts         Post[]
  comments      Comment[]
  followed      FollowShip[]   @relation("UserThatFollowed")
  followsTo     FollowShip[]   @relation("UserFollowedTo")
  friends1      FriendShip[]   @relation("FSUser1")
  friends2      FriendShip[]   @relation("FSUser2")
  notifications Notification[]
  postRatings   PostRating[]
}

model Notification {
  id            Int        @id @default(autoincrement())
  userId        Int
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  isChecked     Boolean    @default(false)
  kind          NotifcationKind
  meta          Json
  date          DateTime   @default(now())
  @@index([userId, id, kind, date(sort: Desc)])
}
enum NotifcationKind {
  NewFollow
  NewFriend
  Welcome
}

model FollowShip {
  id             Int      @id @default(autoincrement())
  followedId     Int
  followed       User     @relation("UserThatFollowed", fields: [followedId], references: [id], onDelete: Cascade)
  followedToInt  Int
  followedTo     User     @relation("UserFollowedTo", fields: [followedToInt], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  @@index([followedId, followedToInt, createdAt(sort: Desc)])
}
model FriendShip {
  id             Int      @id @default(autoincrement())
  user1Id        Int
  user1          User     @relation("FSUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2Id        Int
  user2          User     @relation("FSUser2", fields: [user2Id], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  @@index([user1Id, user2Id, createdAt(sort: Desc)])
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hash       String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  agent      String
  ip         String
  @@index([hash])
}

model Post {
  id           Int       @id @default(autoincrement())
  authorId     Int?
  author       User?     @relation(fields: [authorId], references: [id], onDelete: SetNull)
  content      String
  editedAt     DateTime?
  createdAt    DateTime  @default(now())
  views        Int       @default(0)
  comments     Comment[]
  attachments  PostAttachment[]
  ratings      PostRating[]
  @@index([authorId, createdAt(sort: Desc)])
}

model PostRating {
  id           Int       @id @default(autoincrement())
  postId       Int
  post         Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId       Int
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type         PostRatingType
  @@unique([postId, userId])
  @@index([postId,type,userId])
}

enum PostRatingType {
  Like
  Dislike
}

model PostAttachment {
  id           Int    @id @default(autoincrement())
  url          String
  mimeType     String
  postId       Int
  post         Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  @@index([postId])
}

model Comment {
  id            Int        @id @default(autoincrement())

  authorId      Int?
  author        User?      @relation(fields: [authorId], references: [id], onDelete: SetNull)

  postId        Int
  post          Post       @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId      Int?
  parent        Comment?   @relation("CommentParent", fields: [parentId], references: [id], onDelete: Cascade)
  parentReplies Comment[]  @relation("CommentParent")

  repliedToId   Int?       
  repliedTo     Comment?    @relation("CommentReplied", fields: [repliedToId], references: [id], onDelete: SetNull)
  replyFrom     Comment[]   @relation("CommentReplied")

  content      String
  editedAt     DateTime?
  createdAt    DateTime     @default(now())

  @@index([id, postId, authorId, parentId])
}

